#!/usr/bin/env bash

set -euo pipefail

function check_ssd_path() {
    SSD_PATH="${0}"
    if [[ "${SSD_PATH}" == "${HOME}/.local/bin/ssd" ]]; then
        SSD_PATH="ssd"
    fi
}

function err() {
    echo "‚ùå ${1}" >&2
}

function chromium_copy_paste() {
    cat <<EOF | pbcopy
var allowPaste = function(e){
  e.stopImmediatePropagation();
  return true;
};

document.addEventListener('paste', allowPaste, true);
EOF

    echo "‚úÖ Copied code to clipboard!"
    echo "‚ÑπÔ∏è  Press '‚åò + ‚å• + I' on a browser to open 'Developer Tools' go to 'Console' and paste the code in clipboard."
}

DUMP_DIR="${HOME}/code/work/surajssd/dump"
DUMP_FORMAT="sh"

function usage_dump() {
    echo "üõ†Ô∏è Usage: ${SSD_PATH} dump [Options]"
    echo ""
    echo "Options:"
    echo "    --format, -f <format>   Specify the format for the dump file (default: sh)"
    echo "    --open, -o              Open the dump directory in VS Code"
    echo "    --help, -h              Show this help message"
}

function dump() {
    while [[ $# -gt 0 ]]; do
        case "${1:-}" in
        " ")
            shift
            ;;
        --format | -f)
            shift
            DUMP_FORMAT="$1"
            shift
            ;;
        --open | -o)
            shift
            code "${DUMP_DIR}"
            exit 0
            ;;
        --help | help | -h)
            usage_dump
            exit 0
            ;;
        *)
            err "Unknown option: ${1:-}"
            usage_dump
            exit 1
            ;;
        esac
    done

    FILE_PATH="${DUMP_DIR}/$(date +%Y)-archives/$(date "+%Y-%m-%b-%d-%H-%M-%S").${DUMP_FORMAT}"

    code "${DUMP_DIR}"
    touch "${FILE_PATH}"
    code "${FILE_PATH}"
}

function usage_global() {
    echo "üõ†Ô∏è Usage: "${SSD_PATH}" <subcommand> [options]"
    echo ""
    echo "Available subcommands:"
    echo "    dump      Create a dump file"
    echo "    date      Print the current date in a specific format: YYYY-MM-mmm-dd-HH-MM-SS"
    echo "    browser   Force a website to allow copy-paste in Chromium-based browsers"
}

check_ssd_path

case "${1:-}" in
dump)
    shift
    dump "$@"
    ;;
date)
    shift
    date "+%Y-%m-%b-%d-%H-%M-%S"
    ;;
browser)
    shift
    chromium_copy_paste
    ;;
*)
    err "Unknown subcommand: ${1:-}"
    usage_global
    exit 1
    ;;
esac
